@model IEnumerable<List10.Models.Article>

<h1>Articles</h1>

@{
    ViewData["Title"] = "List";
}

<p>
    <a asp-action="Create">Dodaj produkt</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.ImagePath)</th>
            <th>@Html.DisplayNameFor(model => model.CategoryId)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    @if (item.ImagePath != null)
                    {
                        <img src="@Url.Content($"~/{item.ImagePath}")" style="max-width: 50px; max-height: 50px;" />
                    }
                    else
                    {
                        <img src="~/image/default.jpg" style="max-width: 50px; max-height: 50px;" />
                    }
                </td>
                <td>@item.CategoryId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
